@model KYS.WebUI.Models.LoginModel

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/login.css">
</head>

<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <img src="https://images.unsplash.com/photo-1633409361618-c73427e4e206?w=100&h=100"
                                class="rounded-circle mb-3" alt="Logo" width="80">
                            <h4 class="text-primary fw-bold">Giriş Yap</h4>
                        </div>
                        <form asp-controller="Account" asp-action="Login" method="POST">
                            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
                            <div asp-validation-summary="All" class="text-danger"></div>      

                            <div class="mb-3">
                                <label asp-for="FirmaKodu" class="form-label">Firma Kodu<span class="text-danger">*</span></label>                           
                                <input class="form-control" asp-for="FirmaKodu" placeholder="Firma Kodu" required aria-label="Firma Kodu">
                                <span asp-validation-for="FirmaKodu" class="text-danger"></span>
    
                            </div>  

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email<span class="text-danger">*</span></label>                           
                                <input class="form-control" asp-for="Email" placeholder="Email" required aria-label="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
    
                            </div>      
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Şifre <span class="text-danger">*</span></label>                            
                                <input class="form-control" asp-for="Password" placeholder="Şifre" required aria-label="Şifre">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>      
                                    

                            <div class="d-grid gap-2">                                        
                                <button type="submit" class="btn btn-primary btn-lg">Giriş</button>                                         
                            </div>
                            <div class="mt-3 text-center">
                                <a href="/account/forgotpassword" class="text-muted text-decoration-none">Şifremi Unuttum</a>
                                <span class="mx-2">|</span>
                                <a href="#" class="text-muted text-decoration-none">Kayıt Ol</a>
                            </div>
                        </form>     
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" style="display: none;">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="registerModalLabel">Kayıt Ol</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @Html.Partial("Register", new KYS.WebUI.Models.RegisterModel())
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/register.js"></script>
</body>

</html>
